{
  "name": "orgcolor",
	"displayName": "Org color indicator",
	"description": "Sets the statusbar with a different color for each org",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
				"workspaceContains:.sfdx/sfdx-config.json"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
            "command": "orgcolor.setOrgColor",
            "title": "ORG COLOR: Set Org Color"

		}]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"extensionDependencies": [
		"salesforce.salesforcedx-vscode"
	],
	"devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }

}
